{
  "name": "notes.one",
  "version": "1.0.0",
  "description": "Background note-taking app with global shortcut",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl",
    "dist": "npm run build",
    "dist:mac": "npm run build:mac",
    "dist:win": "npm run build:win",
    "dist:linux": "npm run build:linux",
    "release": "npm run build -- --publish=always",
    "release:mac": "npm run build:mac -- --publish=always",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "test": "jest"
  },
  "keywords": [
    "notes",
    "clipboard",
    "electron",
    "productivity"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "homepage": "https://github.com/yourusername/notes.one",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/notes.one.git"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-notarize": "^1.2.2",
    "electron-rebuild": "^3.2.9",
    "jest": "^29.7.0"
  },
  "build": {
    "appId": "com.notesone.app",
    "productName": "notes.one",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release",
      "publishAutoUpdate": true
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "!src/**/*.{test,spec}.js",
      "!src/**/*.md",
      "!**/.DS_Store",
      "node_modules/electron-updater/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "compression": "maximum",
    "artifactName": "${productName}-${version}-${platform}-${arch}.${ext}",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "minimumSystemVersion": "10.14.0",
      "darkModeSupport": true,
      "type": "distribution",
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "notarize": false,
      "extendInfo": {
        "LSUIElement": "1",
        "CFBundleIconFile": "icon.icns"
      }
    },
    "dmg": {
      "title": "${productName} ${version}",
      "background": "assets/app-logo.png",
      "icon": "assets/icon.icns",
      "iconSize": 128,
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 140,
          "y": 200,
          "type": "file"
        },
        {
          "x": 400,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "notes.one",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "${productName}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Office",
      "description": "Background note-taking app with global shortcut",
      "desktop": {
        "StartupWMClass": "notes.one"
      }
    }
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "crypto-js": "^4.2.0",
    "electron-updater": "^6.6.2",
    "uiohook-napi": "^1.5.4"
  }
}
